<%= form_with(model: @category, local: true) do |f| %>
  <div class="container">
    <div class="card shadow rounded" id="article-form">
    
      <div class="row mt-3">
        <div class="form-group col-2 ml-4">
          <%= f.label :name, "Category name", class: 'text-white' %>
        </div>
        <div class="form-group col-9" style="width: 70%">
          <%= f.text_field :name, class: 'form-control shadow rounded', placeholder: "Enter name"%>
        </div>
      </div>
    
      <div class="form-group row mx-auto">
        <%= f.submit(class: "btn btn-outline-light") %>
      </div>
      
    </div>
  </div>
<% end %>