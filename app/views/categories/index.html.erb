<h1 class="text-center mt-4">Categories</h1>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<% @categories.each do |category| %>
<div class="row justify-content-md-center">
  <div class="col-4">
    <div class="card mt-3 shadow bg-white rounded">
      <div class="card-body text-center">
        <h5>
          <%= link_to category.name, category_path(category), class:"text-success" %>
        </h5>
        <div class="card-footer text-muted">
          <small>
            Created <%= time_ago_in_words(category.created_at) %> ago, edited <%= time_ago_in_words(category.created_at) %> ago
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<div class="flickr_pagination mb-4 mt-4">
  <%= will_paginate @categories, :container => false %>
</div>