<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "Alpha Blog", root_path, class: "navbar-brand", id: "navbrand"%>
  <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Bloggers", users_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <a
          class="nav-link dropdown-toggle"
          href="#"
          id="navbarDropdown"
          role="button"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          Articles
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <div>
            <%= link_to "Articles", articles_path, class: "dropdown-item" %>
          </div>
          
          <% if logged_in? %>
          <div>
            <%= link_to "Create a new article", new_article_path, class:
            "dropdown-item"%>
          </div>
          <% end %>
      </li>

      <li class="nav-item dropdown">
        <a
          class="nav-link dropdown-toggle"
          href="#"
          id="navbarDropdown"
          role="button"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          Categories
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <div>
            <%= link_to "Categories", categories_path, class: "dropdown-item" %>
          </div>
          
          <% if logged_in? && current_user.admin? %>
          <div>
            <%= link_to "Create a new category", new_category_path, class:
            "dropdown-item"%>
          </div>
          <% end %>
      </li>

      <!-- Log in or log out -->
      <% if logged_in? %>
      <li class="nav-item dropdown">
        <a
          class="nav-link dropdown-toggle"
          href="#"
          id="navbarDropdown"
          role="button"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
        <%= "(Admin)" if current_user.admin? %> Profile [<%= current_user.username %>]
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          
          <div>
            <%= link_to "View profile", current_user, class:"dropdown-item" %>
          
          </div>
          <div>
            <%= link_to "Edit profile", edit_user_path(current_user), class:"dropdown-item" %>
          </div>
          <div>
            <%= link_to "Log out", logout_path, class: "dropdown-item", method:
            :delete%>
          </div>
          <div class="dropdown-divider"></div>
          <div>
            <%= link_to "delete profile", user_path(current_user), class: "dropdown-item text-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
        </div>
      </li>
      
      <% else %>
      <li class="nav-item">
        <%= link_to "Log in", login_path, class: "nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to "Sign up", signup_path, class: "nav-link"%>
      </li>
      <% end %>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input
        class="form-control mr-sm-2"
        type="search"
        placeholder="Search"
        aria-label="Search"
      />
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
        Search
      </button>
    </form>
  </div>
</nav>
