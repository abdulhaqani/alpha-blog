<h1 class="text-center mt-4">Alpha Bloggers!</h1>

<% @users.each do |user| %>
<div class="row justify-content-md-center">
  <div class="col-8">
    <div class="card mt-3 shadow bg-white rounded">
      <div class="card-header text-center">
        <h5><%= link_to user.username, user, class:"text-success" %></h5>
      </div>
      <div class="card-body text-center">
        <h5 class="card-title">
          <%= link_to gravatar_for(user, size: 150), user %>
        </h5>
        <p class="card-text">
          <%= pluralize(user.articles.count, "article") %>
        </p>
        <%= link_to "View profile", user, class:"btn btn-outline-success mt-3"
        %>
        <!-- conditional edit -->
        <% if logged_in? && user == current_user %> <%= link_to "Edit profile",
        edit_user_path(user), class:"btn btn-outline-warning mt-3" %> <% end %>
        <div class="card-footer text-muted mb-0 mt-4" %>
          <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
